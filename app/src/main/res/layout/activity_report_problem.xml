<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.features.riderFeatures.tripsHistoryFragment.complaints.ReportProblem">

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp">

        <RadioButton
            android:id="@+id/maskproblem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onRadioButtonClicked"
            android:text="My driver was not wearing a face mask">

        </RadioButton>

        <RadioButton
            android:id="@+id/lostitemproblem"
            android:onClick="onRadioButtonClicked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="I lost an item">

        </RadioButton>
        <RadioButton
            android:id="@+id/accidentproblem"
            android:onClick="onRadioButtonClicked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="I was envolved in an accident">

        </RadioButton>
        <RadioButton
            android:id="@+id/driverproblem"
            android:onClick="onRadioButtonClicked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="My driver was rude or unprofessional">

        </RadioButton>
        <RadioButton
            android:id="@+id/overchargeproblem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:onClick="onRadioButtonClicked"
            android:text="I was overcharged on my cash trip">

        </RadioButton>

        <RadioButton
            android:id="@+id/differentplateproblem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onRadioButtonClicked"
            android:text="The car had a different plate number">

        </RadioButton>


    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitproblem"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="124dp"
        android:background="@drawable/roundedcorners"
        android:text="Return to Maps" />

</RelativeLayout>