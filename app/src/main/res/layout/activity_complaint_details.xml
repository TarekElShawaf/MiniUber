<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/defaultBackground"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/poppin_bold"
            android:gravity="center"
            android:text="Trip Details"
            android:textColor="@color/white"
            android:textSize="40sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_trip_pickup_point"
        android:layout_width="174dp"
        android:layout_height="61dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/poppin_bold"
        android:gravity="center"
        android:text="Pick up Point"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/tv_trip_duration"
        android:layout_width="174dp"
        android:layout_height="61dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppin_bold"
        android:gravity="center"
        android:text="Duration"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_trip_pickup_point" />

    <TextView
        android:id="@+id/tv_trip_fare"
        android:layout_width="174dp"
        android:layout_height="61dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppin_bold"
        android:gravity="center"
        android:text="Fare"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_trip_duration" />


    <TextView
        android:id="@+id/tv_trip_destination"
        android:layout_width="174dp"
        android:layout_height="61dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppin_bold"
        android:gravity="center"
        android:text="Destination"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_trip_fare" />



    <TextView
        android:id="@+id/tv_trip_date"
        android:layout_width="174dp"
        android:layout_height="61dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppin_bold"
        android:gravity="center"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_trip_destination" />

    <TextView
        android:id="@+id/tv_trip_rate"
        android:layout_width="174dp"
        android:layout_height="61dp"
        android:layout_marginTop="36dp"
        android:text="Rate"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/poppin_bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.595"
        app:layout_constraintStart_toEndOf="@+id/tv_trip_pickup_point"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/tv_trip_driver_phoneNo"
        android:layout_width="174dp"
        android:layout_height="61dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppin_bold"
        android:gravity="center"
        android:text="Driver Phone No"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_trip_duration"
        app:layout_constraintTop_toBottomOf="@+id/tv_trip_rate" />

    <TextView
        android:id="@+id/tv_trip_rider_phoneNo"
        android:layout_width="174dp"
        android:layout_height="61dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppin_bold"
        android:gravity="center"
        android:text="Rider Phone No"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_trip_fare"
        app:layout_constraintTop_toBottomOf="@+id/tv_trip_driver_phoneNo" />

    <TextView
        android:id="@+id/tv_trip_problem"
        android:layout_width="174dp"
        android:layout_height="200dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppin_bold"
        android:gravity="center"
        android:scrollbars="vertical"
        android:text="Problem"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_trip_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_trip_rider_phoneNo" />


</androidx.constraintlayout.widget.ConstraintLayout>