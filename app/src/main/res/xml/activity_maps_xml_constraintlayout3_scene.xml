<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/map"
               motion:framePosition="100"
               android:alpha="0.5" />
           <KeyAttribute
               motion:motionTarget="@+id/map"
               motion:framePosition="50"
               android:alpha="0.5" />
           <KeyAttribute
               motion:motionTarget="@+id/map"
               motion:framePosition="100"
               android:scaleX="1.2" />
           <KeyAttribute
               motion:motionTarget="@+id/map"
               motion:framePosition="100"
               android:scaleY="1.2" />
       </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/map"
            motion:touchAnchorSide="bottom" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            motion:layout_constraintHorizontal_bias="1.0"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"
            android:id="@+id/map"
            motion:layout_constraintBottom_toTopOf="@+id/constraint_layout_2"
            android:layout_marginBottom="2dp" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="226dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="1.0"
            motion:layout_constraintTop_toBottomOf="@+id/map"
            motion:layout_constraintHorizontal_bias="1.0"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/constraint_layout_2"
            android:layout_marginTop="2dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/gps"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            motion:layout_constraintBottom_toBottomOf="@+id/map"
            motion:layout_constraintVertical_bias="0.928"
            motion:layout_constraintTop_toTopOf="@+id/map"
            motion:layout_constraintHorizontal_bias="0.956"
            motion:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/map"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            motion:layout_constraintHorizontal_bias="1.0"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />
        <Constraint
            android:id="@+id/constraint_layout_2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="408dp"
            android:layout_height="242dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.158"
            motion:layout_constraintTop_toBottomOf="@+id/map"
            motion:layout_constraintHorizontal_bias="0.333"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/constraint_layout_2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="408dp"
            android:layout_height="242dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.158"
            motion:layout_constraintTop_toBottomOf="@+id/map"
            motion:layout_constraintHorizontal_bias="0.333"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/constraint_layout_2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="408dp"
            android:layout_height="242dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.158"
            motion:layout_constraintTop_toBottomOf="@+id/map"
            motion:layout_constraintHorizontal_bias="0.333"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/constraint_layout_2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="408dp"
            android:layout_height="242dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.158"
            motion:layout_constraintTop_toBottomOf="@+id/map"
            motion:layout_constraintHorizontal_bias="0.333"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
</MotionScene>